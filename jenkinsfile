pipeline {
    agent any

    stages {
        stage('Clonar repositÃ³rio') {
            steps {
                git branch: 'main', url: 'https://github.com/MarcioDivonei/Teste-api-usuario.git'
            }
        }
        stage('Instalar dependencias') {
            steps {
                bat 'npm install'
            }
        }
        stage('Subir sservidor') {
            steps {
                bat 'npm start'
            }
        }
        stage('Realizar os testes') {
            steps {
                bat 'npm run cy:run'
            }
        }
    }
}